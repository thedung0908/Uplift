
@{
    ViewData["Title"] = "Service";
}
<br />
<div class="border">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Service List</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-primary float-right" asp-action="Upsert"><i class="fas fa-plus"></i>&nbsp;Create New Service</a>
        </div>
    </div>
    <br />
    <table id="tblService" class="display">
        <thead>
            <tr>
                <th>Service Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Frequency Count</th>
                <th>Action</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Service Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Frequency Count</th>
                <th>Action</th>
            </tr>
        </tfoot>
    </table>
</div>

@section Scripts {
    <script src="~/js/service.js"></script>
} 